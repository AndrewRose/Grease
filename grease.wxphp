	{
		$data = $this->tree->GetItemData($this->tree->GetSelection());
		if(isset($data->project))
		{
			$this->activeProject = $data->project;
		}
		else if(isset($data->filename))
		{
			if(is_file($data->filename))
			{
				$this->addTab($data->name, $data->filename, TRUE);
			}
		}

		$ev->Skip();
	}

