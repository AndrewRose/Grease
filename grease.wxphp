	public function onConsoleCommandEnter($ev)
	{
		$cmd = $ev->GetString();
		ob_start();
		eval($cmd);
		$ret = ob_get_contents();
		ob_end_clean();
		$this->consoleTextctrl->AppendText('>>> '.$cmd."\n".$ret."\n");

//		$this->consoleTextctrl->ScrollToEnd();

		$lineCount = substr_count($ret, "\n")+2;
		while($lineCount--)
		{
			$this->consoleTextctrl->LineScrollDown();
		}
	}

